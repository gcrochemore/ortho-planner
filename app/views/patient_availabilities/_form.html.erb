<%= simple_form_for(@patient_availability) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <div class="form-group">
      <label for="patient"><%= f.label :patient %></label>
      <%= f.association :patient, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="day"><%= f.label :day %></label>
      <%= f.input :day, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="period"><%= f.label :period %></label>
      <%= f.input :period, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="available"><%= f.label :available %></label>
      <%= f.input :available, label: false, input_html: { class: "form-control" } %>
    </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
