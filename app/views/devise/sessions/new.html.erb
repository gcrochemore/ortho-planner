<div class="row">
  <div class="login col-xs-4 col-xs-offset-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="login_form">Ortho-planner</h1>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean, label: "Rester connectÃ©" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Connexion", class: "btn-block" %>
      </div>
    <% end %>

    <% if false %>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>