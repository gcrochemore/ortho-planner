<div>
  <%= patient.last_name %> <%= patient.first_name %> <%= patient.age ? "("+patient.age.to_s+" ans)".html_safe : "" %><br>
  <%= patient.gender %>
  <%= patient.phone_number %><br>
  <h3>Troubles</h3>
  <% 
    patient.acts.each do |act| %>
      <%= act.to_s %><br>
    <% end
  %>
  <h3>Interactions</h3>
  <%= patient.interactions.count %> interaction(s)
</div>
