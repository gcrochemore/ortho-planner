                  <label for="comments"><%= f.label :comments %></label>
                  <%= f.input :comments, label: false, input_html: { class: "form-control", rows: 10, value: f.object.comments || 
"Suivi orthophonique antérieur :
Suivi en institution :
" } %>
                </div>


