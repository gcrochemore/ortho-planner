<div class="form-inputs">
  <div class="row">
    <div class="form-group col-xs-6">
      <label for="last_name"><%= form_patient.label :last_name %></label>
      <%= form_patient.input :last_name, label: false, input_html: { class: "form-control" } %>
    </div>
    <div class="form-group col-xs-6">
      <label for="first_name"><%= form_patient.label :first_name %></label>
      <%= form_patient.input :first_name, label: false, input_html: { class: "form-control" } %>
    </div>
  </div>
  <div class="row">
    <div class="field form-group col-xs-6">
      <label for="birth_date"><%= form_patient.label :birth_date %></label>
      <%= form_patient.input :birth_date, label: false, as: :text, input_html: { class: "datepicker" } %>
    </div>
    <div class="form-group col-xs-6">
      <label for="birth_place"><%= form_patient.label :birth_place %></label>
      <%= form_patient.input :birth_place, label: false, input_html: { class: "form-control" } %>
      <small id="birth_placeHelp" class="form-text text-muted"></small>
    </div>
  </div>
  <div class="form-group">
    <label for="phone_number"><%= form_patient.label :phone_number %></label>
    <%= form_patient.input :phone_number, label: false, input_html: { class: "form-control" } %>
    <small id="phone_numberHelp" class="form-text text-muted"></small>
  </div>
</div>