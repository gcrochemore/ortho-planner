<%= simple_form_for(@therapy) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <div class="form-group">
      <label for="practitioner"><%= f.label :practitioner %></label>
      <%= f.association :practitioner, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="begin_date"><%= f.label :begin_date %></label>
      <%= f.input :begin_date, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="end_date"><%= f.label :end_date %></label>
      <%= f.input :end_date, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="patient"><%= f.label :patient %></label>
      <%= f.association :patient, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="health_place"><%= f.label :health_place %></label>
      <%= f.association :health_place, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="number_of_sessions"><%= f.label :number_of_sessions %></label>
      <%= f.input :number_of_sessions, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="session_duration"><%= f.label :session_duration %></label>
      <%= f.input :session_duration, label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label for="act"><%= f.label :act %></label>
      <%= f.association :act, label: false, input_html: { class: "form-control" } %>
    </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
