<%= simple_form_for(@waiting_list) do |f| %>
  <%= f.error_notification %>
  <%= f.association :health_place, label: false, input_html: { class: "form-control" } %>
  <%= f.input :end_date, label: false, input_html: { class: "form-control" }, as: :hidden, value: %>

  <div class="form-inputs row">

    <div class="form-group col-xs-6 row">
      <label for="health_place" class="col-xs-2"><%= f.label :health_place %></label>
      <div class="col-xs-9">
        
      </div>
    </div>

    <%= render 'patients/patient_view', patient: waiting_list.patient %> 

    <div class="form-group col-xs-6">
      <label for="start_date" class="col-xs-2"><%= f.label :start_date %></label>
      <div class="col-xs-9">
  		<%= f.input :comments, label: false, input_html: { class: "form-control" }, as: :hidden %>        
      </div>
    </div>

    <div class="form-group col-xs-12">
      <div id='patient'>
        <%= f.simple_fields_for :patient do |f| %>
          <%= render 'patients/patient_take_care_on_waiting_list_fields', f: f %>
        <% end %>
      </div>
    </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


