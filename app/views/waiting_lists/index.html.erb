<div class="row">
  <div class="col-md-6">
    <h1><%= t('.title') %><span class="badge"><%= @patients_on_waiting_list.count + @patients_removed_from_waiting_list.count + @waiting_for_patient_return.count %></span></h1>
  </div>
  <div class="col-md-6">
    <% if can? :create, WaitingList %>
      <%= link_to ('<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> '+t('.new_button')).html_safe, url_for(action: :new), class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>
<div class="clearfix visible-xs visible-md visible-sm visible-lg"></div>
<div class="row">
  <% if can? :filter, WaitingList %>
    <div class="col-md-12 row search-form">
      <legend class="col-md-2 col-xs-12"><%= t :search_title %></legend>
      <fieldset class="col-md-8 col-xs-12">
        <%= search_form_for @q, html: {class: 'form-inline'} do |f| %>
          <div class="form-group">
            <%= f.search_field :patient_first_name_cont, {placeholder: t('activerecord.attributes.patient.first_name'), class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.search_field :patient_last_name_cont, {placeholder: t('activerecord.attributes.patient.last_name'), class: 'form-control'} %>
          </div>
          <%= f.submit class: 'btn btn-default' %>
        <% end %>
      </fieldset>
      <div class="col-md-2 col-xs-12">
        <%= search_form_for @q do |f| %>
          <%= f.submit class: 'btn btn-default', value: "RÃ©initialiser" %>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="col-md-12">  
    <ul  class="nav nav-pills">
      <li class="active">
        <a  href="#1a" data-toggle="tab">Patients a prendre en charge<span class="badge"><%= @patients_on_waiting_list.count %></span></a>
      </li>
      <li><a href="#2a" data-toggle="tab">Patients supprimÃ©s de la liste d'attente<span class="badge"><%= @patients_removed_from_waiting_list.count %></span></a>
      </li>
      <li><a href="#3a" data-toggle="tab">Patients qui doivent rappeler<span class="badge"><%= @waiting_for_patient_return.count %></span></a>
      </li>
    </ul>

    <div class="tab-content clearfix">
      <div class="tab-pane active" id="1a">

        <%= render 'waiting_list_list', waiting_lists: @patients_on_waiting_list %>      
      </div>
      <div class="tab-pane" id="2a">
        <%= render 'waiting_list_list', waiting_lists: @patients_removed_from_waiting_list %>
      </div>
      <div class="tab-pane" id="3a">
        <%= render 'waiting_list_list', waiting_lists: @waiting_for_patient_return %>
      </div>
    </div>
</div>