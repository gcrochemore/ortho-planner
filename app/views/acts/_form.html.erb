<%= simple_form_for(@act, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <div class="form-group">
      <label for="name"><%= f.label :name %></label>
      <%= f.input :name, label: false, input_html: { class: "form-control" } %>
      <small id="nameHelp" class="form-text text-muted"></small>
    </div>

    <div class="form-group">
      <label for="AMO"><%= f.label :AMO %></label>
      <%= f.input :AMO, label: false, input_html: { class: "form-control" } %>
      <small id="AMOHelp" class="form-text text-muted"></small>
    </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
